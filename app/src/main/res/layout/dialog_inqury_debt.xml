<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/white_rounded_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_inquiry_debt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/inquiry_debt"
        android:textColor="@color/colorBrown"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_mid_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_rounded_background"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_inquiry_debt_title">

        <TextView
            android:id="@+id/tv_mid_term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="@string/mid_term"
            android:textColor="@color/colorNightRider"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mid_term_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/tv_rial"
            android:padding="4dp"
            android:text="۳۰۰,۰۰۰"
            android:textColor="@color/colorMainGreen"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_rial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="@string/rial"
            android:textColor="@color/colorMainGreen"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_end_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/light_rounded_background"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_mid_term">

        <TextView
            android:id="@+id/tv_end_of_term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="@string/end_of_term"
            android:textColor="@color/colorNightRider"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_end_of_term_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/tv_end_rial"
            android:padding="4dp"
            android:text="۳۰۰,۰۰۰"
            android:textColor="@color/colorMainGreen"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_end_rial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="@string/rial"
            android:textColor="@color/colorMainGreen"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/continue_"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:padding="16dp"
        android:background="@drawable/green_rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_end_term" />


</androidx.constraintlayout.widget.ConstraintLayout>