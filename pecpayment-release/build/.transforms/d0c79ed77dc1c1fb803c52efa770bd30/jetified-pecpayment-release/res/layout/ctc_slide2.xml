<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/all_theme"
    android:layoutDirection="ltr"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_pec"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">



        <ScrollView
            android:id="@+id/totalscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_content"
                android:orientation="vertical"
                android:measureWithLargestChild="false">

                <TextView
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/card_id_2"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/destPanCTC_2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ملی۱۴۸۹"
                    android:textColor="@color/md_black_1000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/dest_bank"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/destBankCTC"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="پارسیان"
                    android:textColor="@color/md_black_1000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/dest_name"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/destNameCTC"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="مسعود براتی"
                    android:textColor="@color/md_black_1000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/rial_amount"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/amountCTC"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1,200,000"
                    android:textColor="@color/md_black_1000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <Button
                        android:text="@string/confirm"
                        android:padding="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="8dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/dialog_button_bg_pec"
                        android:id="@+id/CTCPayBtn"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="normal|bold"
                        android:textSize="14dp"
                        android:layout_width="135dp"
                        android:layout_height="42dp" />

                    <Button
                        android:id="@+id/exitBtn"
                        android:padding="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingRight="8dp"
                        android:background="@drawable/dialog_button_cancle_bg_pec"
                        android:scaleType="fitCenter"
                        android:text="@string/cancel_txt"
                        android:textColor="#000"
                        android:textStyle="normal|bold"
                        android:textSize="14dp"
                        android:layout_width="135dp"
                        android:layout_height="42dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
