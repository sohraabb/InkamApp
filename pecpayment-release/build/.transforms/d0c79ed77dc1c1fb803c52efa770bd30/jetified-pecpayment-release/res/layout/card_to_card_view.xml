<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/all_theme"
    android:layoutDirection="ltr"
    android:background="#00FFFFFF">

    <ScrollView
        android:id="@+id/scroll_ctc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="-8dp"
            android:background="@color/md_grey_200"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:background="@drawable/shetab_logo"
                    android:layout_marginLeft="5dp"
                    android:layout_width="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:id="@+id/shetabLogo"
                    android:layout_height="35dp" />

                <ProgressBar
                    android:layout_height="30dp"
                    android:id="@+id/payment_progress"
                    style="@style/infinite_progress_horizontal"
                    android:layout_toRightOf="@+id/shetabLogo"
                    android:layout_gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:indeterminate="false"

                    android:visibility="invisible"
                    android:layout_margin="10dp"
                    android:layout_width="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pec_name"

                    android:layout_marginRight="6dp"
                    android:layout_centerInParent="true"
                    android:textColor="#123b78"
                    android:textSize="12sp" />

                <ImageView
                    android:background="@drawable/parsianlogo_pec"
                    android:paddingRight="8dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/imageView"
                    android:layout_width="55dp"
                    android:layout_height="32dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layoutDots"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dots_height"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"/>
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/back_arrow_btn"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:paddingRight="18dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/ctc_backBtn"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_height="60dp" />
            </RelativeLayout>

            </LinearLayout>

        </FrameLayout>
        <ir.pec.mpl.pecpayment.view.CTCViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </ScrollView>


</RelativeLayout>
